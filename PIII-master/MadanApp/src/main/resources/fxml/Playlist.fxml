<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="ku.piii.madanapp.FXMLController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding> 

    <TableView fx:id="tableView" 
               GridPane.columnIndex="0" 
               GridPane.columnSpan="1" 
               GridPane.hgrow="ALWAYS" 
               GridPane.vgrow="ALWAYS"        
               GridPane.rowIndex="1">
    </TableView>
  
    <Button GridPane.rowIndex="2" text="Add to Playlist" onAction="#add" fx:id="lister2" />  
    <Label text="Destination Path" GridPane.rowIndex="3" /> 
    <TextField fx:id="desti" GridPane.rowIndex="4" />
    <Button GridPane.rowIndex="5" text="Transfer Playlist" onAction="#transfer" fx:id="lister3" /> 
    
    <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="New Playlist" onAction="#reset"/>
                    <MenuItem text="Open" onAction="#handleOpenAction" fx:id="op" />
                      <MenuItem text="Delete" onAction="#deleteFile" fx:id="op1" />
                  
                    <SeparatorMenuItem  />
                    <MenuItem text="Exit" onAction="#close"/>
                </items>
            </Menu>
            <Menu text="Edit">
                <items>
                   <MenuItem text="Edit" onAction="#edit" /> 
                    <MenuItem text="Similarity" onAction="#simiScreen" />
                    <MenuItem text="PlayTrans" onAction="#playTran" />
                   
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem text="Search" disable="true"/>
                    <MenuItem text="Online Manual" visible="false"/>
                    <SeparatorMenuItem />
                    <MenuItem text="About" onAction="#handleAboutAction"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    
</GridPane>